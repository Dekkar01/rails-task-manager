<h1>Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <input type="checkbox" name="list[]" value=<%= task.title %>
        <%= 'checked' if task.completed? %>
      >
       <%= link_to task.title, task_path(task) %>
       | <%= link_to "Edit", update_task_path(task) %>
       | <%= link_to "Delete", delete_task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
       </li>
  <% end %>
</ul>

<%= link_to "Create new task", new_task_path %>
