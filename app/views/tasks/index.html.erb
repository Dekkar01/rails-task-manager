<h1>Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <input type="checkbox" name="list[]" value=<%= task.title %>
        <%= 'checked' if task.completed? %>
      >
       <%= link_to task.title, task_path(task) %>
       | <%= link_to update_task_path(task), class: 'btn btn-primary' do %>
            <i class="fa-solid fa-pen-to-square"></i>
          <% end %>
       | <%= link_to delete_task_path(task), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: 'btn btn-danger' do %>
            <i class="fa-solid fa-trash"></i>
          <% end %>

       </li>
  <% end %>
</ul>

<%= link_to "Create new task", new_task_path %>
